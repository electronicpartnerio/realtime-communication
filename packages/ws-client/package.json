{
    "name": "@electronicpartnerio/realtime-communication-ws-client",
    "version": "0.0.3",
    "description": "realtime communication websocket client",
    "homepage": "https://github.com/electronicpartnerio/realtime-communication#readme",
    "bugs": {
        "url": "https://github.com/electronicpartnerio/realtime-communication/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/electronicpartnerio/realtime-communication.git"
    },
    "license": "UNLICENSED",
    "author": "electronicpartner",
    "files": [
        "dist",
        "umd"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "npm run build:bundle && npm run build:umd",
        "build:bundle": "rm -rf ./dist && tsc",
        "build:umd": "vite build --config vite.config.umd.mjs",
        "bundle": "npm run build && npm publish",
        "bundle:local": "npm run build && npm pack",
        "playground:vite": "vite --config ./vite.playground.config.ts",
        "playground:ws": "node ./playground/server.js",
        "start": "concurrently -k -r -n VITE,WS -c cyan,magenta \"npm:playground:vite\" \"npm:playground:ws\"",
        "dev": "vitest --config ./vitest.config.ts --watch",
        "format": "prettier --write . --config prettier.config.mjs",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "preBuild": "tsc -p tsconfig.internal.json && node ./internal/preBuild.js",
        "test": "vitest",
        "test:c": "vitest --coverage"
    },
    "prettier": "./prettier.config.mjs",
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.13",
        "@typescript-eslint/eslint-plugin": "^8.27.0",
        "@typescript-eslint/parser": "^8.27.0",
        "@vitest/coverage-v8": "^3.0.9",
        "concurrently": "^9.2.1",
        "eslint": "^9.23.0",
        "eslint-plugin-vitest-globals": "^1.5.0",
        "express": "^5.1.0",
        "happy-dom": "^17.4.4",
        "lit": "^3.3.1",
        "nanoid": "^3.3.11",
        "prettier": "^3.5.3",
        "types-package-json": "^2.0.39",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.27.0",
        "vite": "^6.2.3",
        "vite-plugin-banner": "^0.8.1",
        "vitest": "^3.0.9",
        "ws": "^8.18.3"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "dependencies": {
        "@electronicpartnerio/ep-lit-translate": "^0.0.6",
        "@electronicpartnerio/uic": "^0.0.65"
    }
}
